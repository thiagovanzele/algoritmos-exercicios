package leetcode.exercise.Ex001_TwoSum;

import java.util.Arrays;

public class testeeee {

	public static void main(String[] args) {
		
		int[][] nums = new int[][] {
			{2, 5, 7},
			{2, 5, 7},
			{2, 5, 7}
		};
		
		int[][] nums2 = new int[][] {
			{2, 5, 7},
			{2, 5, 7},
			{2, 5, 7}
		};
		
		
		
		int[][] matrizSomada = somaMatriz(nums, nums2);
		
		for (int[] linha : matrizSomada) {
			System.out.println(Arrays.toString(linha));
		}

		
	}
	
	public static int[][] somaMatriz(int[][] nums, int[][] nums2) {
		int[][] novaMatriz = new int[nums.length][nums.length];
		
		for (int i = 0; i < nums.length; i++) {
			for (int j = 0; j < nums.length; j++) {
				novaMatriz[i][j] = nums[i][j] + nums2[i][j];
			}
		}
		
		return novaMatriz;
	}

}
