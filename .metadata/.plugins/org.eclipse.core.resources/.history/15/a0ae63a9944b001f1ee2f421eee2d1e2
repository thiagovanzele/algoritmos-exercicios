package leetcode.exercise.Ex001_TwoSum;

public class testeeee {

	public static void main(String[] args) {
		
		int[][] nums = new int[3][3];
		int[][] nums2 = new int[3][3];
		
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				nums[i][j] = 2;
			}
		}
		
		for (int i = 0; i < 3; i++) {
			for (int j = 0; j < 3; j++) {
				nums2[i][j] = 3;
			}
		}
		
		int[][] matrizSomada = somaMatriz(nums, nums2);
		
		for (int[] m : matrizSomada) {
			for (int n : m) {
				System.out.print("[" + n + "] ");
		}
			System.out.println();
		}

		
	}
	
	public static int[][] somaMatriz(int[][] nums, int[][] nums2) {
		int[][] novaMatriz = new int[nums.length][nums.length];
		
		for (int i = 0; i < nums.length; i++) {
			for (int j = 0; j < nums.length; j++) {
				novaMatriz[i][j] = nums[i][j] + nums2[i][j];
			}
		}
		
		return novaMatriz;
	}

}
